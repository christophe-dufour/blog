<aside class="flash row">
  <article flash-alert duration="0" active-class="alert" class="col-md-6 col-md-offset-3">
    {{flash.message}}
  </article>
</aside>
<form class="form-horizontal" role="form" class="edit-user">
  <div class="form-group" ng-class="{'has-warning has-feedback':errors.title}">
    <label
    for="title"
    class="col-md-2 control-label col-md-offset-2">
      Title
    </label>

    <div class="col-md-5">
      <input type="text" name="title" class="form-control" placeholder="e.g. How to do something cool"
             ng-required="true"
             ng-model="post.title">
    </div>
  </div>
  <div class="form-group">
    <label
    for="s3Bucket"
    class="col-md-2 control-label col-md-offset-2">
      Preview Url
    </label>

    <div class="col-md-5">
      <div s3-upload bucket="activity_images" ng-model="post.preview_url"
           s3-upload-options="{getOptionsUri: '<%= Rails.application.routes.url_helpers.s3_access_token_path %>', folder: 'images/'}">
      </div>
    </div>
  </div>
  <div class="form-group" ng-class="{'has-warning has-feedback':errors.body}">
    <label
    for="body"
    class="col-md-2 control-label col-md-offset-2">
      Body
    </label>

    <div class="col-md-5">
      <textarea name="body" class="form-control" ng-model='post.body'
                placeholder="In markdown" style="min-height: 500px">
      </textarea>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-offset-2 col-md-3">
      <button class="btn btn-default" ng-click="cancel()"> Cancel</button>
    </div>
    <div class="col-md-4 text-right">
      <button class="btn btn-primary" ng-click="save()"> Save</button>
    </div>
  </div>
</form>